&НаКлиенте
Процедура ЗапуститьИгру()
    УровеньСложности = ВыбратьУровеньСложности();
    Если УровеньСложности = Неопределено Тогда
        Возврат;
    КонецЕсли;

    ЗагаданноеЧисло = СгенерироватьЧисло(УровеньСложности);
    Попытки = 0;
    
    Пока Истина Цикл
        ВводимоеЧисло = ВводЧисла();
        Попытки = Попытки + 1;

        Если ВводимоеЧисло = ЗагаданноеЧисло Тогда
            Сообщить("Поздравляем! Вы угадали число за " + Попытки + " попыток.");
            Возврат;
        ИначеЕсли ВводимоеЧисло < ЗагаданноеЧисло Тогда
            Сообщить("Загаданное число больше.");
        Иначе
            Сообщить("Загаданное число меньше.");
        КонецЕсли;
    КонецЦикла;
КонецПроцедуры

&НаКлиенте
Функция ВыбратьУровеньСложности()
    Варианты = Новый Массив;
    Варианты.Добавить("Легкий (1-10)");
    Варианты.Добавить("Средний (1-100)");
    Варианты.Добавить("Сложный (1-1000)");

    Выбор = Вопрос("Выберите уровень сложности:", Варианты);
    Если Выбор = 0 Тогда
        Возврат 10; // Легкий уровень
    ИначеЕсли Выбор = 1 Тогда
        Возврат 100; // Средний уровень
    ИначеЕсли Выбор = 2 Тогда
        Возврат 1000; // Сложный уровень
    КонецЕсли;

    Возврат Неопределено;
КонецФункции

&НаКлиенте
Функция СгенерироватьЧисло(Уровень)
    Случай Уровень Из
        10: Возврат СлучайноеЧисло(1, 10);
        100: Возврат СлучайноеЧисло(1, 100);
        1000: Возврат СлучайноеЧисло(1, 1000);
    КонецСлучая;
КонецФункции

&НаКлиенте
Функция ВводЧисла()
    Число = Ввод("Введите ваше число:");
    Если Не Число Тогда
        Сообщить("Ошибка ввода! Пожалуйста, введите число.");
        Возврат ВводЧисла();
    КонецЕсли;

    Возврат Число;
КонецФункции
